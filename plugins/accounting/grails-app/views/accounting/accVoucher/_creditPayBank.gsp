<div>
    <form id="frmCredit" name="frmCredit" class="form-horizontal form-widgets" role="form">
        <div class="panel-body">
            <input type="hidden" name="hidCoaCodeCr" id="hidCoaCodeCr"/>
            <input type="hidden" name="hidCoaHeadCr" id="hidCoaHeadCr"/>
            <input type="hidden" name="hidCoaIdCr" id="hidCoaIdCr"/>
            <input type="hidden" name="hidSourceTypeIdCr" id="hidSourceTypeIdCr"/>

            <div class="form-group">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-md-4 control-label label-required" for="coaVoucherType">Account Code:</label>

                        <div class="col-md-8">
                            <select id="coaVoucherType"
                                    name="coaVoucherType"
                                    onchange="onChangeCoaVoucherType();"
                                    tabindex="1">
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label label-required" for="amountCr">Amount:</label>

                        <div class="col-md-8">
                            <input type="text" id="amountCr" name="amountCr" tabindex="3"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label label-optional" for="divisionIdCr">Division:</label>

                        <div class="col-md-6">
                            <select id="divisionIdCr"
                                    name="divisionIdCr"
                                    tabindex="5">
                            </select>
                        </div>

                        <div class="col-md-2" style="padding: 0">
                            <button id="addCr" name="addCr" data-role="button" class="k-button"
                                    role="button" onclick='return onSubmitCredit();' tabindex="6"
                                    aria-disabled="false"><span class="k-icon k-i-plus"></span>Add
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-md-4 control-label label-optional" id="lblSourceIdCr"
                               for="sourceIdCr">Source:</label>

                        <div class="col-md-8">
                            <select id="sourceIdCr"
                                    name="sourceIdCr"
                                    tabindex="2">
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label label-optional" for="particularsCr">Particulars:</label>

                        <div class="col-md-8">
                            <textarea type="text" class="k-textbox" id="particularsCr" name="particularsCr" rows="2"
                                      tabindex="4"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <table id="flexCredit" style="display:none"></table>
            </div>
        </div>

        <div class="panel-footer" style="display:none"></div>
    </form>
</div>


