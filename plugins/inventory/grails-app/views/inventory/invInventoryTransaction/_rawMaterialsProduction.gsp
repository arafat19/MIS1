<div>
      <div class="panel-body">
    <form id="frmRawMaterial" name="frmRawMaterial" class="form-horizontal form-widgets" role="form">

            <g:hiddenField name="rawDetailsId" value="-1"/>

            <div class="form-group">
                <div class="form-group">
                    <label class="col-md-2 control-label label-required"
                           for="rawMaterialId">Materials:</label>

                    <div class="col-md-3">
                        <select id="rawMaterialId"
                                name="rawMaterialId"
                                required="required"
                                validationMessage="Required"
                                onchange="onChangeRawMaterial();"
                                tabindex="2">
                        </select>

                    </div>

                    <div class="col-md-2 pull-left">
                        <span class="k-invalid-msg" data-for="rawMaterialId"></span>
                    </div>
                </div>


                <div class="form-group">

                    <label class="col-md-2 control-label label-required"
                           for="rawMaterialQuantity">Quantity:</label>

                    <div class="col-md-2">
                        <input type="text" class="" id="rawMaterialQuantity" name="rawMaterialQuantity"
                               placeholder="Quantity" required validationMessage="Required"/>
                    </div>

                    <div class="col-md-1 pull-left">
                        <span id="lblUnitRaw"></span>
                    </div>
                    <div class="col-md-2 pull-left">
                        <span class="k-invalid-msg" data-for="rawMaterialQuantity"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label label-optional"></label>
                    <div class="col-md-3">
                        <button id="addRaw" name="addRaw" type="submit" data-role="button" class="k-button k-button-icontext" role="button"
                                aria-disabled="false"><span class="k-icon k-i-plus"></span>Add
                        </button>
                    </div>

                </div>
            </div>
    </form>
    <table id="flexRawMaterial" style="display:none"></table>
          </div>
</div>

