<g:render template="/sarb/taskModel/scriptDetailsForRefundTask" />

<div id="application_top_panel" class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Task Details
        </div>
    </div>
    <input id="hidLocalCurrency" type="hidden" value="<app:localCurrency property="symbol"/>">
    <form id='refundTaskForm' name='refundTaskForm' class="form-horizontal form-widgets" role="form">
        <input type="hidden" id="oldTaskId" name="oldTaskId" value="" />
        <div class="panel-body">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="lblPaymentMethod">Payment Method:</label>
                    <div class="col-md-8">
                        <span id="lblPaymentMethod"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="lblCustomerName">Customer Name:</label>
                    <div class="col-md-8">
                        <span id="lblCustomerName"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="lblCustomerId">Customer A/C No.:</label>
                    <div class="col-md-8">
                        <span id="lblCustomerId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="lblBeneficiaryName">Beneficiary Name:</label>
                    <div class="col-md-8">
                        <span id="lblBeneficiaryName"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="lblBeneficiaryId">Beneficiary ID:</label>
                    <div class="col-md-8">
                        <span id="lblBeneficiaryId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="lblRemittancePurpose">Remittance Purpose:</label>
                    <div class="col-md-8">
                        <span id="lblRemittancePurpose"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="lblRefNo">Ref No:</label>
                    <div class="col-md-8">
                        <span id="lblRefNo"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="lblLocalAmount">Amount (<span id="lblLocalCurrency"></span>):</label>
                    <div class="col-md-8">
                        <span id="lblLocalAmount"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="lblForeignAmount">Amount (BDT):</label>
                    <div class="col-md-8">
                        <span id="lblForeignAmount"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="lblPaidBy">Paid By:</label>
                    <div class="col-md-8">
                        <span id="lblPaidBy"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label label-required" for="refundAmount">Refund Amount (<span id="lblLocalCurrency2"></span>):</label>
                    <div class="col-md-5">
                        <input type="text" id="refundAmount" name="refundAmount" />
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <button id="refund" name="refund" type="submit" data-role="button"
                    class="k-button k-button-icontext"
                    role="button" tabindex="3"
                    aria-disabled="false"><span class="k-icon k-i-ok"></span>Refund
            </button>
        </div>

    </form>

</div>


<table id="flex" style="display:none"></table>


<div id="application_top_panel" class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Task Status Details
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <span id="lblSarbRefNo"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <span id="lblResponseOfRef"></span>
            </div>
        </div>
    </div>

</div>