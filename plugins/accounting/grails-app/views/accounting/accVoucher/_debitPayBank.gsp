<div>
    <form id="frmDebit" name="frmDebit" class="form-horizontal form-widgets" role="form">
        <div class="panel-body">
            <input type="hidden" name="hidCoaCodeDr" id="hidCoaCodeDr"/>
            <input type="hidden" name="hidCoaHeadDr" id="hidCoaHeadDr"/>
            <input type="hidden" name="hidCoaIdDr" id="hidCoaIdDr"/>
            <input type="hidden" name="hidSourceTypeIdDr" id="hidSourceTypeIdDr"/>

            <div class="form-group">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-md-4 control-label label-required" for="coaCodeDr">Account Code:</label>

                        <div class="col-md-8">
                            <input type="text" class="k-textbox" id="coaCodeDr" name="coaCodeDr" tabindex="1"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label label-required" for="amountDr">Amount:</label>

                        <div class="col-md-8">
                            <input type="text" id="amountDr" name="amountDr" tabindex="3"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label label-optional" for="divisionIdDr">Division:</label>

                        <div class="col-md-6">
                            <select id="divisionIdDr"
                                    name="divisionIdDr"
                                    tabindex="5">
                            </select>
                        </div>

                        <div class="col-md-2" style="padding: 0">
                            <button id="addDr" name="addDr" data-role="button" class="k-button"
                                    role="button" onclick='return onSubmitDebit();' tabindex="6"
                                    aria-disabled="false"><span class="k-icon k-i-plus"></span>Add
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-md-4 control-label label-optional" id="lblSourceIdDr"
                               for="sourceIdDr">Source:</label>

                        <div class="col-md-8">
                            <select id="sourceIdDr"
                                    name="sourceIdDr"
                                    tabindex="2">
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label label-optional" for="particularsDr">Particulars:</label>

                        <div class="col-md-8">
                            <textarea type="text" class="k-textbox" id="particularsDr" name="particularsDr" rows="2"
                                      tabindex="4"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <table id="flexDebit" style="display:none"></table>
            </div>
        </div>

        <div class="panel-footer" style="display:none"></div>
    </form>
</div>


