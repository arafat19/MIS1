<div>
      <div class="panel-body">
    <form id="frmFinishedMaterial" name="frmFinishedMaterial" class="form-horizontal form-widgets" role="form">
            <g:hiddenField name="finishedDetailsId" value="-1"/>

            <div class="form-group">
                <div class="form-group">
                    <label class="col-md-2 control-label label-required"
                           for="finishedMaterialId">Materials:</label>

                    <div class="col-md-3">
                        <select id="finishedMaterialId"
                                name="finishedMaterialId"
                                required="required"
                                validationMessage="Required"
                                onchange="onChangeFinishedMaterial();"
                                tabindex="2">
                        </select>

                    </div>

                    <div class="col-md-2 pull-left">
                        <span class="k-invalid-msg" data-for="finishedMaterialId"></span>
                    </div>
                    <label class="col-md-2 control-label label-optional"
                           for="lblOverheadCost">Overhead Cost:</label>
                    <div class="col-md-2 pull-left">
                        <span id="lblOverheadCost"></span>&nbsp;BDT
                    </div>
                </div>


                <div class="form-group">

                    <label class="col-md-2 control-label label-required"
                           for="finishedMaterialQuantity">Quantity:</label>

                    <div class="col-md-2">
                        <input type="text" class="" id="finishedMaterialQuantity" name="finishedMaterialQuantity"
                               placeholder="Quantity" required validationMessage="Required"/>
                    </div>

                    <div class="col-md-1 pull-left">
                        <span id="lblUnitFinished"></span>
                    </div>
                    <div class="col-md-2 pull-left">
                        <span class="k-invalid-msg" data-for="finishedMaterialQuantity"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label label-optional"></label>
                    <div class="col-md-3">
                        <button id="addFinished" name="addFinished" type="submit" data-role="button" class="k-button k-button-icontext" role="button"
                                aria-disabled="false"><span class="k-icon k-i-plus"></span>Add
                        </button>
                    </div>

                </div>
            </div>
    </form>
    <table id="flexFinishedMaterial" style="display:none"></table>
          </div>
</div>



